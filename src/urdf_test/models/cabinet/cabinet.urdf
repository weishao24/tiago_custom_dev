<?xml version="1.0"?>
<robot name="cabinet">
  <!-- 机柜主体：长2m、宽0.8m、高1.5m -->
  <link name="cabinet_body">
    <visual>
      <origin xyz="1.0 0 0.75"/> <!-- 中心在(1,0,0.75) -->
      <geometry><box size="2.0 0.8 1.5"/></geometry>
      <material name="gray"><color rgba="0.3 0.3 0.3 1"/></material>
    </visual>
    <collision>
      <origin xyz="1.0 0 0.75"/>
      <geometry><box size="2.0 0.8 1.5"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="50"/> <!-- 机柜较重，固定在地面 -->
      <inertia ixx="10" ixy="0" ixz="0" iyy="10" iyz="0" izz="10"/>
    </inertial>
  </link>

  <!-- 服务器插槽1（空槽，方便放置）：长0.5m、宽0.7m、高0.2m -->
  <link name="slot1">
    <visual>
      <origin xyz="0.5 0 0.9"/>
      <geometry><box size="0.5 0.7 0.2"/></geometry>
      <material name="light_gray"><color rgba="0.6 0.6 0.6 1"/></material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0.9"/>
      <geometry><box size="0.5 0.7 0.2"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" izz="0.01"/>
    </inertial>
  </link>

  <!-- 插槽固定到机柜 -->
  <joint name="slot1_to_cabinet" type="fixed">
    <parent link="cabinet_body"/>
    <child link="slot1"/>
    <origin xyz="-0.5 0 0.15"/>
  </joint>
</robot>
